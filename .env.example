# .env.example (root level)
# Rasa Pro License (Required)
RASA_LICENSE=your-rasa-pro-license-key-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Local LLM Configuration
LOCAL_LLM_ENDPOINT=http://localhost:8000/v1
LOCAL_LLM_API_KEY=optional-api-key-for-local-llm

# Voice Assistant Configuration (for voice recipes)
CARTESIA_API_KEY=your-cartesia-api-key-here
DEEPGRAM_API_KEY=your-deepgram-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Enterprise Search Configuration (for RAG recipes)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key-here
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Database Configuration (for deployment recipes)
DATABASE_URL=postgresql://username:password@localhost:5432/rasa_db
REDIS_URL=redis://localhost:6379

# Analytics Configuration (for advanced recipes)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
ANALYTICS_DB_URL=postgresql://username:password@localhost:5432/analytics_db

# Development Settings
LOG_LEVEL=INFO
DEBUG=false
RASA_TELEMETRY_ENABLED=false